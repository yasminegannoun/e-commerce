{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>
    
    <!-- Search form -->
    <form action="{{ path('admin_livres_recherche') }}" method="GET" class="mb-4">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Rechercher un livre..." aria-label="Rechercher un livre" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Rechercher</button>
        </div>
    </form>
    
    <div class="row">
        {% for livre in livres %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ livre.image }}" class="card-img-top" alt="Book Image">
                    <div class="card-body">
                        <h5 class="card-title">{{ livre.titre|capitalize }}</h5>
                        <p class="card-text">ISBN: {{ livre.isbn }}</p>
                        <p class="card-text">Editeur: {{ livre.editeur }}</p>
                        <p class="card-text">Date Edition: {{ livre.editedAt|date('d-m-Y') }}</p>
                        <p class="card-text">Prix(DT): {{ livre.prix }}</p>
                        <a href="{{ url('admin_livres_show', {'id': livre.id}) }}" class="btn btn-success">Voir d√©tail</a>
                        <a href="{{ url('panier_ajouter_livre', {'id': livre.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
